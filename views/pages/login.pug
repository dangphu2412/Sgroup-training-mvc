extends ../layout/auth.pug

block content
    h2 Login
    form#login
        .mb-3
            label.form-label(for='exampleInputEmail1') Email address
            input#username.form-control(type='text' aria-describedby='emailHelp' name='username')
            #emailHelp.form-text We&apos;ll never share your email with anyone else.
        .mb-3
            label.form-label(for='exampleInputPassword1') Password
            input#password.form-control(type='password' name='password')
        button.btn.btn-primary(type='submit') Submit
        button.btn.btn-warning(type='click')
            a(href='/auth/register') Register

block scripts
    script(src='/js/login.js')